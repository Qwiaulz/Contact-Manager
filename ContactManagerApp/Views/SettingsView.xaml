<Page x:Class="ContactManagerApp.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:services="clr-namespace:ContactManagerApp.Services"
      xmlns:converters="clr-namespace:ContactManagerApp.Converters"
      Title="SettingsPage">
    <Page.Resources>
        <converters:LocalizationConverter x:Key="LocalizationConverter"/>

        <!-- Стиль для заголовка -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Стиль для міток -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Стиль для текстових полів -->
        <Style x:Key="DefaultTextBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#0078D4" Direction="0" ShadowDepth="0" Opacity="0.5" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Padding" Value="20,2,20,0"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonPressedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Grid Margin="20" Background="{DynamicResource ContentBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Style="{StaticResource HeaderStyle}"
                   Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                 Converter={StaticResource LocalizationConverter}, 
                                 ConverterParameter=Settings}"/>

        <!-- Налаштування -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Колонка 1: Вибір мови і теми -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <!-- Вибір мови -->
                    <TextBlock Style="{StaticResource LabelStyle}"
                               Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                             Converter={StaticResource LocalizationConverter}, 
                                             ConverterParameter=Language}"/>
                    <ComboBox x:Name="LanguageComboBox" Style="{StaticResource DefaultComboBoxStyle}" 
                              Width="200" HorizontalAlignment="Left" Margin="0,30,0,20"
                              SelectionChanged="LanguageComboBox_SelectionChanged">
                        <ComboBoxItem Tag="en">
                            <TextBlock Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                          Converter={StaticResource LocalizationConverter}, 
                                          ConverterParameter=English}"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="uk">
                            <TextBlock Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                          Converter={StaticResource LocalizationConverter}, 
                                          ConverterParameter=Ukrainian}"/>
                        </ComboBoxItem>
                    </ComboBox>

                    <!-- Вибір теми -->
                    <TextBlock Style="{StaticResource LabelStyle}"
                               Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                             Converter={StaticResource LocalizationConverter}, 
                                             ConverterParameter=Theme}"/>
                    <ComboBox x:Name="ThemeComboBox" Style="{StaticResource DefaultComboBoxStyle}" 
                              Width="200" HorizontalAlignment="Left" Margin="0,5,0,20"
                              SelectionChanged="ThemeComboBox_SelectionChanged">
                        <ComboBoxItem Tag="Light">
                            <TextBlock Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                          Converter={StaticResource LocalizationConverter}, 
                                          ConverterParameter=LightTheme}"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="Dark">
                            <TextBlock Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                          Converter={StaticResource LocalizationConverter}, 
                                          ConverterParameter=DarkTheme}"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="HighContrast">
                            <TextBlock Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                          Converter={StaticResource LocalizationConverter}, 
                                          ConverterParameter=HighContrastTheme}"/>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Колонка 2: Зміна пароля -->
                <StackPanel Grid.Column="1" Margin="20,0,20,0">
                    <TextBlock Style="{StaticResource LabelStyle}"
                               Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                             Converter={StaticResource LocalizationConverter}, 
                                             ConverterParameter=ChangePassword}"/>
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Style="{StaticResource LabelStyle}" Margin="0,0,0,5"
                                   Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                                 Converter={StaticResource LocalizationConverter}, 
                                                 ConverterParameter=OldPassword}"/>
                        <PasswordBox x:Name="OldPasswordBox" Style="{StaticResource DefaultTextBoxStyle}" 
                                     Width="200" HorizontalAlignment="Left"
                                     PasswordChar="*" />
                        <TextBlock Style="{StaticResource LabelStyle}" Margin="0,10,0,5"
                                   Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                                 Converter={StaticResource LocalizationConverter}, 
                                                 ConverterParameter=NewPassword}"/>
                        <PasswordBox x:Name="NewPasswordBox" Style="{StaticResource DefaultTextBoxStyle}" 
                                     Width="200" HorizontalAlignment="Left"
                                     PasswordChar="*" />
                        <TextBlock Style="{StaticResource LabelStyle}" Margin="0,10,0,5"
                                   Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                                 Converter={StaticResource LocalizationConverter}, 
                                                 ConverterParameter=ConfirmNewPassword}"/>
                        <PasswordBox x:Name="ConfirmNewPasswordBox" Style="{StaticResource DefaultTextBoxStyle}" 
                                     Width="200" HorizontalAlignment="Left"
                                     PasswordChar="*" />
                        <Button Style="{StaticResource ActionButtonStyle}" Click="ChangePassword_Click"
                                Content="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                                  Converter={StaticResource LocalizationConverter}, 
                                                  ConverterParameter=SavePassword}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Колонка 3: Видалення акаунту -->
                <StackPanel Grid.Column="2" Margin="20,0,0,0">
                    <TextBlock Style="{StaticResource LabelStyle}"
                               Text="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                             Converter={StaticResource LocalizationConverter}, 
                                             ConverterParameter=DeleteAccount}"/>
                    <Button Style="{StaticResource ActionButtonStyle}" Click="DeleteAccount_Click"
                            Content="{Binding Source={x:Static services:LocalizationManager.Instance}, 
                                              Converter={StaticResource LocalizationConverter}, 
                                              ConverterParameter=DeleteAccount}"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>