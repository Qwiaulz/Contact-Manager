<Window x:Class="ContactManagerApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:ContactManagerApp.Services"
        xmlns:converters="clr-namespace:ContactManagerApp.Converters"
        Title="Login" Height="550" Width="400"
        Icon="/Assets/Photo/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#ffffff">

    <Window.Resources>
        <converters:LocalizationConverter x:Key="LocalizationConverter"/>
        <!-- Стиль для вторинної кнопки -->
        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="BorderBrush" Value="#222"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#eee"/>
                                <Setter Property="BorderBrush" Value="#111"/>
                                <Setter Property="Foreground" Value="#111"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#ddd"/>
                                <Setter Property="BorderBrush" Value="#000"/>
                                <Setter Property="Foreground" Value="#000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для основної кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#222"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="BorderBrush" Value="#111"/>
                                <Setter Property="Foreground" Value="#fff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#111"/>
                                <Setter Property="BorderBrush" Value="#000"/>
                                <Setter Property="Foreground" Value="#fff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox і PasswordBox -->
        <Style x:Key="TextInputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#bbb"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#fafafa"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordInputStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#bbb"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#fafafa"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Converter={StaticResource LocalizationConverter}, ConverterParameter=Welcome}"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#111"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="{Binding Source={x:Static services:LocalizationManager.Instance}, Converter={StaticResource LocalizationConverter}, ConverterParameter=Username}" 
                   FontSize="14" Foreground="#444"/>
            <TextBox x:Name="UsernameTextBox" Style="{DynamicResource TextInputStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <Label Content="{Binding Source={x:Static services:LocalizationManager.Instance}, Converter={StaticResource LocalizationConverter}, ConverterParameter=Password}" 
                   FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="PasswordBox" Style="{DynamicResource PasswordInputStyle}"/>
        </StackPanel>

        <CheckBox x:Name="RememberMeCheckBox" Grid.Row="3" 
                  Content="{Binding Source={x:Static services:LocalizationManager.Instance}, Converter={StaticResource LocalizationConverter}, ConverterParameter=RememberMe}"
                  FontSize="14" Foreground="#444" Margin="0,0,0,25"
                  HorizontalAlignment="Left"/>

        <Button Grid.Row="4" 
                Content="{Binding Source={x:Static services:LocalizationManager.Instance}, Converter={StaticResource LocalizationConverter}, ConverterParameter=LoginButton}"
                Width="120" Height="40"
                Style="{DynamicResource PrimaryButtonStyle}"
                HorizontalAlignment="Center"
                Margin="0,0,0,25"
                Click="LoginButton_Click"/>

        <TextBlock Grid.Row="5" 
                   Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Converter={StaticResource LocalizationConverter}, ConverterParameter=NoAccountPrompt}"
                   FontSize="14" Foreground="#555"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <Button Grid.Row="6" 
                Content="{Binding Source={x:Static services:LocalizationManager.Instance}, Converter={StaticResource LocalizationConverter}, ConverterParameter=SignUpButton}"
                Width="80" Height="35"
                Style="{DynamicResource FlatButtonStyle}"
                HorizontalAlignment="Center"
                Click="RegisterButton_Click"/>
    </Grid>
</Window>